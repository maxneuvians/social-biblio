
%tr
  %td(valign="top")
    = image_tag tweet.get_raw['user']['profile_image_url'], :class => "img-responsive img-center img-twitter-profile", :alt => ""
  %td(style="padding-left:10px;")
    %h4
      = tweet.get_raw['user']['name']
      %small= "@#{tweet.username}"
    %p
      = auto_link(tweet.content).html_safe
    %p.tweet-links
      %a(target="_blank" href="https://twitter.com/#{tweet.username}/status/#{tweet.tweet_id}")
        %img(src="https://si0.twimg.com/images/dev/cms/intents/bird/bird_gray/bird_16_gray.png")
        = tweet.tweet_created_at.strftime('%b %-d')
      %a(href="https://twitter.com/intent/tweet?in_reply_to=#{tweet.tweet_id}")
        %img(src="https://si0.twimg.com/images/dev/cms/intents/icons/reply.png")
        Reply
      %a(href="https://twitter.com/intent/retweet?tweet_id=#{tweet.tweet_id}")
        %img(src="https://si0.twimg.com/images/dev/cms/intents/icons/retweet.png")
        Retweet
      %a(href="https://twitter.com/intent/favorite?tweet_id=#{tweet.tweet_id}")
        %img(src="https://si0.twimg.com/images/dev/cms/intents/icons/favorite.png")
        Favorite
