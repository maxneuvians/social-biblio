%table.table
  %thead
    %tr 
      %th Rank
      %th Library
      %th Mentions count
  %tbody
    - Library.rank_by_mentions.each_with_index do |(name, mentions), index|
      %tr
        %td= index + 1
        %td
          = link_to name, "https://twitter.com/#!/#{name}", :target => "_blank"
        %td= mentions